{% extends "base.html.twig" %}

{% block body %}
<div class="container">
  <h1 class="display-3 mt-3">Modifier une recette</h1>
  {{ form_start(form) }}
  <div class="form-group">
    {{ form_label(form.title) }}
    {{ form_widget(form.title) }}
    <div class="form-error">
      {{ form_errors(form.title) }}
    </div>
  </div>
  <div class="form-group">
    {{ form_label(form.description) }}
    {{ form_widget(form.description) }}
    <div class="form-error">
      {{ form_errors(form.description) }}
    </div>
  </div>
  <div class="form-group">
    {{ form_label(form.preparation_time) }}
    {{ form_widget(form.preparation_time) }}
    <div class="form-error">
      {{ form_errors(form.preparation_time) }}
    </div>
  </div>
  <div class="form-group">
    {{ form_label(form.timeout) }}
    {{ form_widget(form.timeout) }}
    <div class="form-error">
      {{ form_errors(form.timeout) }}
    </div>
  </div>
  <div class="form-group">
    {{ form_label(form.cooking_time) }}
    {{ form_widget(form.cooking_time) }}
    <div class="form-error">
      {{ form_errors(form.cooking_time) }}
    </div>
  </div>
  <div class="form-group">
    {{ form_label(form.ingredient) }}
    {{ form_widget(form.ingredient) }}
    <div class="form-error">
      {{ form_errors(form.ingredient) }}
    </div>
  </div>
  <div class="form-group">
    {{ form_label(form.steps) }}
    {{ form_widget(form.steps) }}
    <div class="form-error">
      {{ form_errors(form.steps) }}
    </div>
  </div>
  <div class="form-check form-switch mt-3">
    {{ form_label(form.isPremium) }}
    {{ form_widget(form.isPremium) }}
    <div class="form-error">
      {{ form_errors(form.isPremium) }}
    </div>
  </div>
  {{ form_row(form.diets) }}
  {{ form_row(form.allergens) }}
  <div class="form-group my-3">
    {{ form_row(form.submit) }}
  </div>
  {{ form_end(form) }}
</div>
{% endblock body %}